﻿﻿
@model _23._1News.Models.Db.Subscription

@{
    ViewData["Title"] = "Create";
    var subTypeId = TempData["subTypeId"];
    var subTypeName = TempData["subTypeName"];
    var subTypePrice = TempData["subTypePrice"];
    var subTypeDescription = TempData["subTypeDescription"];

}

<h1>Welcome to Subscribe</h1>
<hr />

<div class="col-md-4">
    <div class="card mb-4 rounded-3 shadow-sm border-primary">
        <div class="card-header py-3 text-bg-primary border-primary">
            <h4 class="my-0 fw-normal" style="color:white"><small>Your Plan:</small>@subTypeName</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title pricing-card-title">$ @subTypePrice<small class="text-body-secondary fw-light">/mo</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
                <li>@subTypeDescription</li>
            </ul>
        </div>
    </div>

    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaymentComplete" /> @Html.DisplayNameFor(model => model.PaymentComplete)
                </label>
            </div>

            <br />
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Subscribe</button>
            </div>

        </form>
    </div>
</div>