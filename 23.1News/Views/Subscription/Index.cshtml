@model List<SubscriptionListVM>

@{
    ViewData["Title"] = "Subscription List";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}



    <div class="navbar navbar-expand" style="margin-top:50px">
        <partial name="_LoginPartial" />
    </div>

<h1 style="text-align:center;margin-bottom:10px">Subscription List</h1>

<table id="myTable" class="table table-bordered table-hover table-striped table-light">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Is Active</th>
            <th>Payment Complete</th>
            <th>Plan Id</th>
            <th>Plan Name</th>
            <th>Plan Price</th>
            <th>User Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentComplete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.SubscriptionId" class="btn btn-primary mb-2" style="width:50%">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.SubscriptionId" class="btn btn-danger" style="width:50%"
                       onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>




       







