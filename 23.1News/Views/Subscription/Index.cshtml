@model List<SubscriptionListVM>

@{
    ViewData["Title"] = "Subscription List";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}


<main>
    <div class="navbar navbar-expand" style="margin-top:50px">
        <partial name="_LoginPartial" />
    </div>

    <h1>Subscription List</h1>

<div class="table-responsive small">
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Date
                </th>
                <th>
                    Is Active
                </th>
                <th>
                    PaymentComplete
                </th>
                <th>
                    Plan Id
                </th>
                <th>
                Plan Name
                </th>
                    <th>
                        Plan Price
                    </th>
                <th>
                User Email
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.SubscriptionId)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.SubscriptionCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentComplete)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.SubscriptionTypeId)
                    </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubscriptionTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubscriptionPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                    <td>
                            <a asp-action="Details" asp-route-id="@item.SubscriptionId" style="color:#2fa4e7">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.SubscriptionId" style="color:#2fa4e7">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</main> 
       







