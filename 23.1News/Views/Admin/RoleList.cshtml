@model List<Microsoft.AspNetCore.Identity.IdentityRole>


<div class="row">
    <div id="left" class="col-md-3">
        <partial name="_AdminSidebarPartialView" />

    </div>


    <div id="right" class=" col-md-9">
        <h1 style="text-align:center">Role List</h1>
        <hr />
        <table class="table table-bordered table-hover table-striped table-light">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>NormalizedName</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>@role.NormalizedName</td>
                        <td>
                            <a asp-action="DelUser" asp-route-id="@role.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


