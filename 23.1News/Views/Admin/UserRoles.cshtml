@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUserRole<string>>

@{
    ViewData["Title"] = "UserRoles";
}

<h1>UserRoles</h1>
<hr />

<p>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary m-2">Back to Admin Page</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Role Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userRole in Model)
        {
            <tr>
                <td>@userRole.UserId</td>
                <td>@userRole.RoleId</td>
                <td>
                    <a asp-action="DelUser" asp-route-id="@userRole.UserId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>






