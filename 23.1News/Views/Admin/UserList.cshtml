@model IEnumerable<_23._1News.Models.Db.User>

@{
    ViewData["Title"] = "User List";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}



    <div class="navbar navbar-expand" style="margin-top:50px">
        <partial name="_LoginPartial" />
    </div>

<h1 style="text-align:center;margin-bottom:10px">User List</h1>

<table id="myTable" class="table table-bordered table-hover table-striped table-light">
        <thead>
            <tr>
                <th>User-Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="DelUser" asp-route-id="@user.Id" class="btn btn-danger" 
                        onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
  



