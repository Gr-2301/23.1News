@model IEnumerable<_23._1News.Models.Db.User>


<div class="row">
    <div id="left" class="col-md-3">
        <partial name="_AdminSidebarPartialView" />

    </div>


    <div id="right" class=" col-md-9">
        <h1 style="text-align:center">User List</h1>
        <hr />
        <table class="table table-bordered table-hover table-striped table-light">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-action="DelUser" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


