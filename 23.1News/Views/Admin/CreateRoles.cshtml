@model _23._1News.Models.ViewModels.UserRoleVM
@{
    ViewData["Title"] = "CreateRoles";
    var msg = TempData["msg"] as string;
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}


@if (msg != null)
{
    <p>@msg</p>
}



<main>
    <div class="navbar navbar-expand" style="margin-top:50px">
        <partial name="_LoginPartial" />
    </div>

    <h1>Assign Roles</h1>
    <hr />

<form asp-action="CreateRoles" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">User Id</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Role Id</label>
        <input asp-for="RoleId" class="form-control" />
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Insert User Role</button>

    <div>
        <a asp-action="Index">Back to Admin</a>
    </div>
</form>
</main>


