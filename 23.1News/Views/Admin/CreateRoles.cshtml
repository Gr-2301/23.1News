@model _23._1News.Models.ViewModels.UserRoleVM
@{
    ViewData["Title"] = "CreateRoles";
}

<h1>CreateRoles</h1>



<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">User Id</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Role Id</label>
        <input asp-for="RoleId" class="form-control" />
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Insert User Role</button>

</form>