@model _23._1News.Models.ViewModels.UserRoleVM
@{
    ViewData["Title"] = "CreateRoles";
    var msg = TempData["msg"] as string;
}


@if (msg != null)
{
    <p>@msg</p>
}


<h1>Create Roles</h1>
<hr />

<p>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary m-2">Back to Admin Page</a>
</p>

<form asp-action="CreateRoles" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">User Id</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Role Id</label>
        <input asp-for="RoleId" class="form-control" />
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Insert User Role</button>

    <div>
        <a asp-action="Index">Back to Admin</a>
    </div>
</form>



