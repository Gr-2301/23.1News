@model _23._1News.Models.ViewModels.UserRoleVM
@{
    ViewData["Title"] = "CreateRoles";
    var msg = TempData["msg"] as string;
}


<h1>Assign Roles</h1>



@if (msg != null)
{
    <p>@msg</p>
}
    
<div class="row">
    <div id="left" class="col-md-3">
        <partial name="_AdminSidebarPartialView" />

    </div>


    <div id="right" class=" col-md-9">
        <h1 style="text-align:center">Create Roles</h1>
        <hr />
        <form asp-action="CreateRoles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label">User Id</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoleId" class="control-label">Role Id</label>
                <input asp-for="RoleId" class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Insert User Role</button>

            <div>
                <a asp-action="Index">Back to Admin</a>
            </div>
        </form>
    </div>
</div>

