@model IEnumerable<_23._1News.Models.Db.Article>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}




    <div class="navbar navbar-expand" style="margin-top:50px">
        <partial name="_LoginPartial" />
    </div>

    <h1 style="text-align:center;margin-bottom:10px">News List</h1>

    <table id="myTable" class="table table-bordered table-hover table-striped table-light">
        <thead>
            <tr>
                <th>DateStamp</th>
                <th>LinkText</th>
                <th>ImageLink</th>
                <th>Headline</th>
                <th>ContentSummary</th>
                <th>Content</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.DateStamp)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.LinkText)
                    </td>
                    <td style="width:150px;">
                        <img src="@item.BlobLink" class="card-img-top" alt="...">
                    </td>

                    <td>
                            @Html.DisplayFor(modelItem => item.Headline)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.ContentSummary)
                    </td>
                    <td>
                            @Html.Raw(item.Content)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryId)
                    </td>
                    <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mb-2" style="width:100%">Edit</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mb-2" style="width:100%">Details</a>
                    <a asp-action="DelUser" asp-route-id="@item.Id" class="btn btn-danger" style="width:100%"
                           onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>



