@model _23._1News.Models.Db.Article
@{
    ViewData["Title"] = "Home Page";
    var test = @Model.BlobLink;
}

<div id="sidebar">

    <div class="row">
        @*<div class="col-md- text-md-center">*@
        <div class="col-md-12 text-md-center">
            <div class="text-md-center mb-5 bg-light">
                <h4 class="bg-primary text-white">Latest News</h4>
                <vc:latest-news count="5"></vc:latest-news>
            </div>
         </div>
         <div class="col-md-12 text-md-center">
            <div class="text-md-center mb-5 bg-light">
            <h4 class="bg-primary text-white">Editors Choice</h4>
            <vc:editors-choice count="5"></vc:editors-choice>
            </div>
         </div>
     </div>


</div>



<div id="main">

<br /><br />

<div class="row">

    <div class="card col-md-11">
        <img src="@test" class="card-img-top" style="height:300px; width:450px" alt="..." >
        <div class="card-body">
            <a asp-controller="Article" asp-action="Details" asp-route-id="@Model.Id">
                @*<h5 class="card-title">mitem.LinkText</h5>*@
                <h7 class="card-text"><i>@Model.DateStamp.ToString("yyyy-MM-dd HH:mm")</i></h7>
                <h5 class="card-title">@Model.Headline</h5>
                <p class="card-text">@Model.ContentSummary</p>
                <p class="card-text">@Model.Content</p>
            </a>
        </div>

    </div>

</div>

</div>

