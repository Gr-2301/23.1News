@model _23._1News.Models.View_Models.ArticleVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Article</h1>

<hr />

@if (User.IsInRole("Editor"))
{
    <p>
        <a asp-controller="Article" asp-action="Create" class="btn btn-primary m-2">Create New</a>
