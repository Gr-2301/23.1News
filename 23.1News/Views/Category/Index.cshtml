@model IEnumerable<_23._1News.Models.Db.Category>


@{
    ViewData["Title"] = "Category List";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}




<div class="navbar navbar-expand" style="margin-top:50px">
    <partial name="_LoginPartial" />
</div>

<h1 style="text-align:center;margin-bottom:10px">Category List</h1>

<table class="table table-bordered table-hover table-striped table-light">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="DelUser" asp-route-id="@item.CategoryId" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </td>
            </tr>
               
                
        }
           
        
    </tbody>
</table> 



