@model IEnumerable<_23._1News.Models.Db.Category>

@{
    ViewData["Title"] = "Index";
}

<h3>Category List</h3>

<p>
    <a asp-action="Create">Create New Category</a>
</p>

@if (User.IsInRole("Editor"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary m-2">Create New Category</a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-primary m-2">Back to Editor Page</a>
    </p>
}

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary m-2">Create New Category</a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-primary m-2">Back to Admin Page</a>
    </p>

}

<table class="table table-bordered table-striped table-hover table-sm" style="width:200px">
    <thead>
        <tr>
            <th>

                @Html.DisplayNameFor(model => model.CategoryId)

            </th>
            <th>

                @Html.DisplayNameFor(model => model.Name)
               
            </th>
            <th>Action

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> | *@
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>


                </td>
            </tr>
        }
    </tbody>
</table>
