@model IEnumerable<_23._1News.Models.Db.SubscriptionType>

@{
    ViewData["Title"] = "SubscriptionTypeList";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}



<main>
    <div class="navbar navbar-expand" style="margin-top:50px">
        <partial name="_LoginPartial" />
    </div>

    <h1>SubscriptionType List</h1>

<div class="table-responsive small">
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:#2fa4e7">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" style="color:#2fa4e7">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" style="color:#2fa4e7">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

</main>


