@using Microsoft.AspNetCore.Identity
@using _23._1News.Models.Db;
@model IEnumerable<_23._1News.Models.Db.SubscriptionType> 


@{
    ViewData["Title"] = "SubscriptionType";

    if (Context.Request.Cookies.TryGetValue("user_id", out string value))
    {

        TempData["Subsciption"] = "You are Already Subscribing";

    }
}

<div class="col-md-12 text-md-center">
    <div class="text-md-center mb-5 bg-light">
        <h3 class="bg-primary text-white">@TempData["Subsciption"]</h3>

    </div>
</div>

<div class="pricing-header p-3 pb-md-4 mx-auto text-center" style="margin-top:40px;">
    <h1 class="display-4 fw-normal text-body-emphasis">Start Subscribing Today</h1>
    <p class="fs-5 text-body-secondary">Be the first to get exclusive offers and the latest news.</p>
</div>

<main style="margin-top:20px;">
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        @foreach (var item in Model)
        {
            if(@item.TypeName=="Free")
            {
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm" style="height:295px;">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">@item.TypeName</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">$@item.Price<small class="text-body-secondary fw-light">/mo</small></h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>@item.Description<br /></li>
                            
                            </ul>
                            <a asp-controller="SubscriptionType" asp-action="GotoStart" asp-route-id="@item.Id" class="btn btn-lg btn-outline-primary m-2">Sign up for free</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm border-primary">
                        <div class="card-header py-3 text-bg-primary border-primary">
                            <h4 class="my-0 fw-normal"style="color:white;">@item.TypeName</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">$@item.Price<small class="text-body-secondary fw-light">/mo</small></h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>@item.Description</li>
                            </ul>
                            <a asp-controller="SubscriptionType" asp-action="GotoStart" asp-route-id="@item.Id" class="btn btn-lg btn-primary m-2">Go to Start</a>
                        </div>
                    </div>
                </div>
            }
        }
     </div>
</main>

 

