                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">@item.TypeName</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$@item.Price<small class="text-body-secondary fw-light">/mo</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>@item.Description</li>
                        </ul>
                        <br />
                        <br />
                        <a asp-controller="Subscription" asp-action="Create" class="btn btn-lg btn-primary m-2">Go to Start</a>
                    </div>
                </div>
