@using Microsoft.AspNetCore.Identity
@using _23._1News.Models.Db;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <img src="~/image/images.jpg" alt="" width="32" height="32" class="rounded-circle me-2">
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link btn btn-link text-dark" button="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="Index">Admin Portal</a>
            </li>
        }
        @if (User.IsInRole("Editor"))
        {
            <li class="nav-item">
                <a class="nav-link btn btn-link text-dark" button="btn btn-primary" asp-area="" asp-controller="Ai" asp-action="Index">Editor Portal</a>
            </li>
        }
        
        
    
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
